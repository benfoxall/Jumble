<% remote_form_for (@user_session || UserSession.new), :update => 'login' do |f| %>
<p>
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.submit :login %>
</p>
<%= f.error_messages :header_message => '' %>
<% end %>