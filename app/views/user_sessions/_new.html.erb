<% remote_form_for @user_session, :update => 'login' do |f| %><%= f.hidden_field :claim_code %>
<p>
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :password %><br/>
	<%= f.password_field :password %>
</p>
<p>
	<%= f.submit :login %>
</p>
<%= f.error_messages :header_message => '' %>
<% end %>