<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :price, 'Price (&pound;)' %><br />
    <%= f.text_field :price %>
  </p>
  <div id="share_picker">
	<div class="handle">
		
	</div>
  </div>
  <p>
    <%= f.label :retained_cost %><br />
    <%= f.text_field :retained_cost %>
  </p>
  <p>
    <%= f.label :cause_id %><br />
    <%= f.text_field :cause_id %>
  </p>
  <p>
    <%= f.label :id_in_cause %><br />
    <%= f.text_field :id_in_cause %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>